#include <iostream >
using namespace std;
#include<math.h>
#define MAX 100

void nhap (int a[], int &n)
{
    for(int i = 0; i < n; i++)
    {
        cin>>a[i];
    }
}

int tongChan(int a[], int n)
{
    
    if(n == 0)
        return 0;
    float s = tongChan(a, n - 1);
    if(a[n - 1] % 2 == 0)
        s = s + a[n - 1];
    return s;

    //if(n == 0)
    //    return 0;
    //if(a[n - 1] % 2 == 0)   // xét ph?n t? cu?i tru?c
    //    return tongChan(a, n - 1) + a[n - 1];
    //return tongChan(a, n - 1);
}
int main()
{
    int n;
    cin>>n ;
    int a[MAX];

    nhap(a, n);

    int tong = tongChan(a, n);
    cout<<tong ;
    return 0;
}
